<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>vanphongpham</display-name>

	<!-- Cấu hình Servlet cho admin homeController -->
	<servlet>
		<servlet-name>AdminHomeController</servlet-name>
		<servlet-class>com.vanphongpham.controller.admin.AdminHomeController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminHomeController</servlet-name>
		<url-pattern>/admin/home</url-pattern>
	</servlet-mapping>

	<!-- Cấu hình Servlet cho web homeController -->
	<servlet>
		<servlet-name>WebHomeController</servlet-name>
		<servlet-class>com.vanphongpham.controller.web.WebHomeController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebHomeController</servlet-name>
		<url-pattern>/web/home</url-pattern>
	</servlet-mapping>

	<!-- Cấu hình Servlet cho trang chủ -->
	<servlet>
		<servlet-name>HomeController</servlet-name>
		<servlet-class>com.vanphongpham.controller.home.HomeController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomeController</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>

	<!-- Cấu hình Servlet cho trang đăng nhập -->
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>com.vanphongpham.controller.login.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Cấu hình Servlet cho trang đăng ký -->
	<servlet>
		<servlet-name>RegisterController</servlet-name>
		<servlet-class>com.vanphongpham.controller.register.RegisterController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterController</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>


	<!-- Cấu hình Servlet cho trang quên mật khẩu -->
	<servlet>
		<servlet-name>ForGotController</servlet-name>
		<servlet-class>com.vanphongpham.controller.forgot.ForGotController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ForGotController</servlet-name>
		<url-pattern>/forgot</url-pattern>
	</servlet-mapping>


	<!-- Cấu hình Servlet cho trang giỏ hàng -->
	<servlet>
		<servlet-name>CartController</servlet-name>
		<servlet-class>com.vanphongpham.controller.cart.CartController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CartController</servlet-name>
		<url-pattern>/cart</url-pattern>
	</servlet-mapping>


	<!-- Cấu hình Servlet cho trang hồ sơ tài khoản -->
	<servlet>
		<servlet-name>ProfileController</servlet-name>
		<servlet-class>com.vanphongpham.controller.profile.ProfileController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProfileController</servlet-name>
		<url-pattern>/profile</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>org.jboss.weld.environment.servlet.Listener</listener-class>
	</listener>

	<!-- Cấu hình Servlet cho trang sản phẩm yêu thích -->
	<servlet>
		<servlet-name>FavoritesController</servlet-name>
		<servlet-class>com.vanphongpham.controller.favorites.FavoritesController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FavoritesController</servlet-name>
		<url-pattern>/favorites</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>org.jboss.weld.environment.servlet.Listener</listener-class>
	</listener>

	<!--Khi
	khởi chạy sẽ sử dụng file này-->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>


</web-app>